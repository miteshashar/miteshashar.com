  <style>
    body {
      background-color: #dce;
    }
    #background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      filter: blur(50px);
    }

    #container {
      font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
        Arial, sans-serif;
      height: 100%;
      z-index: 1;
    }

    main {
      height: 100%;
      display: flex;
      justify-content: center;
    }

    #hero {
      display: flex;
      align-items: start;
      flex-direction: column;
      justify-content: center;
      padding: 3vh 5vw;
      height: 93vh;
      gap: 5vh;
    }

    h1 {
      font-size: 22px;
    }

    #links {
      display: flex;
      gap: 16px;
      justify-content: center;
    }

    #source-code {
      font-style: italic;
      text-align: center;
      font-size: small;
      margin: 1em auto 1em;
    }

    #links a,
    #intro a,
    #source-code a {
      color: rgba(40, 88, 10, 0.8);
    }

    #links a,
    #intro a,
    #links a *,
    #intro a *,
    #source-code a {
      transition: all 0.2s;
    }

    #links a {
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      padding: 5px 10px 5px 7px;
    }

    #links a,
    #source-code a {
      text-decoration: none;
    }

    #links a:hover,
    #intro a:hover,
    #source-code a:hover {
      color: #15142e;
    }

    #links a svg,
    #intro a svg {
      height: 1em;
      margin-left: 5px;
      margin-right: 5px;
    }

    #links a.button,
    #intro a.button {
      color: rgb(230, 230, 230);
      background: linear-gradient(83.21deg, rgba(17, 36, 5, 0.8) 0%, #333 100%);
      box-shadow:
        inset 0 0 0 1px rgba(255, 255, 255, 0.12),
        inset 0 -2px 0 rgba(0, 0, 0, 0.24);
      border-radius: 10px;
      display: inline-flex;
      place-content: start;
      padding: 0.5em 0.75em;
    }
    #links a.button {
      padding-top: 0.5em !important;
      padding-bottom: 0.5em !important;
    }
    #links a.button svg {
      padding: 0px;
      margin-left: 0;
      max-width: min-content;
    }

    #links a.button:hover,
    #intro a.button:hover {
      color: white;
      box-shadow: none;
    }

    pre,
    .pre {
      font-family: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
        Consolas, "DejaVu Sans Mono", monospace;
      font-weight: normal;
    }

    h2 {
      margin: 0 0 0.5em;
      font-weight: normal;
      color: #111827;
      font-size: 20px;
    }

    p {
      color: #4b5563;
      font-size: 16px;
      line-height: 22px;
      letter-spacing: -0.006em;
      margin: 0;
    }

    p small {
      line-height: 18px;
    }

    .box {
      padding: 0.8em 0.5em;
      background: rgba(255, 255, 255, 1);
      border-radius: 16px;
      border: 1px solid white;
    }

    .center {
      text-align: center;
    }

    .full {
      width: 100%;
    }

    #services {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(30%, 2fr));
      gap: 1.5%;
      z-index: 1;
      margin: 0.5em auto;
    }

    #services .service {
      display: flex;
      justify-content: start;
      align-items: center;
      flex-direction: column;
      font-size: 1em;
      text-decoration: none;
      backdrop-filter: blur(50px);
      border-radius: 16px;
      background: radial-gradient(
        150% 150% at 25% 75%,
        rgba(240, 240, 240, 0.3) 0%,
        rgba(255, 255, 255, 0.9) 100%
      );
      border: 1px solid rgba(246, 246, 246, 0.85);
      box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
      z-index: 2;
    }
    #services .service,
    #services .service:hover {
      transition:
        all 0.3s ease-in,
        box-shadow 0.6s ease-in-out;
    }
    #services .service:hover {
      /* box-shadow: 0 0 100px 15px rgba(24, 42, 12, 0.2);
      transform: scale(1.02);
      background: radial-gradient(
        150% 150% at 25% 75%,
        rgba(248, 248, 248, 0.5) 0%,
        rgba(255, 255, 255, 0.95) 100%
      );
      border-color: rgba(200, 200, 200, 0.9);
      z-index: 2000; */
    }
    small {
      color: #5c6674;
    }

    @media screen and (max-width: 870px) {
      #links a.button {
        font-size: smaller;
      }
    }
    @media screen and (max-width: 768px) {
      main {
        padding: 0 2vw;
      }
      #container {
        display: flex;
        flex-direction: column;
        gap: 1vh;
      }

      #hero {
        display: block;
        padding: 0.25vh 3vw;
      }

      .box {
        padding: 0.5em 4em;
      }

      #links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(30%, 3fr));
        gap: 3%;
      }

      #source-code {
        margin-top: 2em;
        padding-bottom: 3em;
      }

      #links a.button {
        padding: 0.6em 1em;
        font-size: smaller;
      }

      #services {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100%, 1fr));
        gap: 2dvh;
        margin: 0 auto 1em;
      }
      h1 {
        line-height: 1.25;
        font-size: 20px;
        margin-block-end: 0.5em;
        margin-block-start: 0.5em;
      }
    }
    @media screen and (max-width: 560px) {
      #links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(45%, 0.5fr));
        gap: 8px;
      }
      .box {
        padding: 0.5em 3em;
      }
    }
    @media screen and (max-width: 368px) {
      /* #links a.button {
        padding: 0.6em 1em;
        font-size: smaller;
      } */
      #services {
        display: grid;
        /* grid-template-columns: repeat(auto-fit, minmax(100%, 1fr)); */
        /* gap: 2dvh; */
        margin: 0 auto 2em;
      }
      .box {
        padding: 0.5em 1.5em;
      }
    }
  </style>
</div>
