import background from "../assets/background.svg";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main>
    <section id="hero">
      <h1 id="intro" class="center">
        Hi! I am Mitesh Ashar, a software engineer with 16 years of
        <a
          href="https://linkedin.com/in/miteshashar"
          target="_blank"
          title="LinkedIn - Mitesh Ashar">cross-domain experience</a
        >.
      </h1>
      <div class="full">
        <h1 class="center full">You can hire me to…</h1>
        <section id="services">
          <span class="service box center">
            <h2>Build Software</h2>
            <p>Full-stack, DevOps &amp; Applied AI.</p>
            <p>
              <small>
                With experience in Python, Node.js, React, SolidJS and more, I
                can help you build your next project or contribute to an
                existing one.
              </small>
            </p>
          </span>
          <span class="service box center">
            <h2>Generate Business Leads</h2>
            <p>Qualified, Relevant &amp; Targeted.</p>
            <p>
              <small>
                With powerful tools augmented with AI &amp; semantic analysis, I
                can help you with scraping, mining &amp; data analysis .
              </small>
            </p>
          </span>
          <span class="service box center">
            <h2>Automate Processes</h2>
            <p>Tools, notifications, pipelines…</p>
            <p>
              <small>
                With advanced scalable setups of n8n, no/low code tools on your
                infrastructure, I can help you save time &amp; <em>$$$</em>!
              </small>
            </p>
          </span>
        </section>
